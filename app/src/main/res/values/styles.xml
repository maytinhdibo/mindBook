<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="android:windowLightStatusBar">false</item>-->
        <item name="colorPrimary">@color/bottom_nav_item</item>
        <item name="colorPrimaryDark">@color/backgroundPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>


    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="bgColor">@color/backgroundPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="bgColor">@color/backgroundPrimary</item>
        <item name="colorPrimary">#c9c9c9</item>
    </style>

    <style name="AppThemeLight.MaterialCustom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="bgColor">@color/backgroundPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppThemeDark.MaterialCustom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="bgColor">@color/backgroundPrimary</item>
        <item name="colorPrimary">#c9c9c9</item>
    </style>
    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">#6B616161</item>
        <item name="colorControlActivated">#fdd835</item>
    </style>

    <style name="UserRate" parent="@android:style/Widget.DeviceDefault.RatingBar.Indicator">
        <item name="colorControlNormal">#6B616161</item>
        <item name="colorControlActivated">#fdd835</item>
    </style>

    <style name="title">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="section_title">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginRight">8pt</item>
        <item name="android:layout_marginLeft">8pt</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="container">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingRight">8pt</item>
        <item name="android:paddingLeft">8pt</item>
    </style>

    <style name="input">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="outline_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">9pt</item>
        <item name="android:paddingRight">9pt</item>
        <item name="android:layout_marginRight">2pt</item>
        <item name="android:layout_marginTop">4pt</item>
        <item name="android:paddingTop">4pt</item>
        <item name="android:paddingBottom">4pt</item>
        <item name="android:textColor">#555</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
