<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/container"
    android:paddingTop="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_review"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view2"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:padding="0dp"
            android:rating="0"
            android:theme="@style/UserRate"
            android:isIndicator="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:background="@drawable/outline_input"
        android:hint="@string/write_review_hint"
        android:inputType="textMultiLine"
        android:minHeight="75dp"
        android:padding="9dp"
        android:textSize="16sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel_review_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/review_post"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:textColor="@color/grayColor"
            android:textStyle="bold"
            android:text="Cancel" />

        <Button
            android:id="@+id/review_post"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:paddingRight="0dp"
            android:paddingLeft="6dp"
            android:gravity="left|center_vertical"
            android:layout_margin="0dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Post" />
    </RelativeLayout>
</LinearLayout>