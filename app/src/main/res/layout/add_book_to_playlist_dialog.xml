<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:orientation="vertical"
    android:maxHeight="300dp"
    android:background="@color/backgroundPrimary"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/new_playlist_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="0dp"
        android:text="@string/addToBookShelf"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addlist_playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginTop="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="end">

        <EditText
            android:id="@+id/addlist_playlist_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:hint="@string/new_playlist_hint"
            android:layout_gravity="start" />

        <ImageView
            android:id="@+id/addlist_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/detail_button"
            android:backgroundTint="@color/overlayBgPrimary"
            android:backgroundTintMode="src_over"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add"
            android:tint="@color/textColor" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="end">

        <Button
            android:id="@+id/addlist_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="0dp"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textColor="@color/grayColor"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>